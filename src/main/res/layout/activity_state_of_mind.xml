<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StateOfMindActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageButton
                android:id="@+id/som_back_btn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:background="@drawable/empty_background"
                android:scaleType="fitCenter"
                android:src="@drawable/backarrow" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background2"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/white"
                android:textAlignment="center"

                android:text="State of mind refers to your momentary emotions or daily moods that you’ve logged in the app.
identify patterns and reflect on what impacts your state of mind." />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="380dp"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/stateofmind" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="How you’ve felt overall today?" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Eg: Health, Education, Money, Work, etc"
                android:inputType="text"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/State_of_mind_questions"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:text="Log" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>