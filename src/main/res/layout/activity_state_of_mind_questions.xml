<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StateOfMindQuestions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/som_q_back_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/empty_background"
                android:scaleType="fitCenter"
                android:src="@drawable/backarrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background2"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Choose how you're feeling right now"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_gravity="center"
                android:paddingVertical="10dp"
                android:id="@+id/mood_pic"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="invisible"
                android:padding="25dp"
                android:background="@drawable/imageview"
                />
            <TextView
                android:id="@+id/mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:visibility="invisible"
                android:layout_marginVertical="10dp"
                android:textColor="@color/white"/>

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:hapticFeedbackEnabled="true"
                android:indeterminate="false"
                android:max="6"
                android:progress="3"
                android:progressDrawable="@drawable/custom_seek_bar"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Whatâ€™s having the biggest impact on you?" />

            <EditText
                android:id="@+id/custom_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:layout_marginBottom="20dp"
                android:hint="" />

            <Button
                android:id="@+id/summary"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Done"
                android:background="@drawable/rounded_rectangle"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>