<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeditateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/meditate_back_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/empty_background"
                android:scaleType="fitCenter"
                android:src="@drawable/backarrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background2"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Meditation is a practice in which an individual uses a technique - such as mindfulness, or focusing the mind  on a particular object, thought, or activity - to train attention and awareness, and achieve a mentally clear and emotionally calm and stable."
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/meditate"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic"
                android:text="1. Find Quiet Space: Choose a calm spot."
                android:textColor="#FFFFFF"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic"
                android:text="2. Posture: Sit comfortably with eyes closed."
                android:textColor="#FFFFFF"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic"
                android:text="3. Focus on Breathing: Notice the breath; return focus gently if distracted."
                android:textColor="#FFFFFF"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic"
                android:text="4. Start Small: Begin with a few minutes, gradually increasing."
                android:textColor="#FFFFFF"  />

            <Button
                android:id="@+id/go"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Go"
                android:background="@drawable/rounded_rectangle"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>